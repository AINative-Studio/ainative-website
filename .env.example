# AINative Studio - Next.js Environment Configuration
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control!

# ============================================
# API Configuration
# ============================================
# Main API endpoint (production: https://api.ainative.studio)
NEXT_PUBLIC_API_BASE_URL=https://api.ainative.studio
NEXT_PUBLIC_API_URL=https://api.ainative.studio

# API request timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=15000

# Environment identifier
NEXT_PUBLIC_ENVIRONMENT=development

# ============================================
# Stripe Payment Configuration
# ============================================
# Stripe publishable key (safe for client-side)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Stripe secret key (SERVER-SIDE ONLY - never expose to client)
STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Stripe webhook secret (SERVER-SIDE ONLY)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ============================================
# QNN (Quantum Neural Network) Configuration
# ============================================
NEXT_PUBLIC_QNN_API_URL=https://qnn.ainative.studio/api
NEXT_PUBLIC_QNN_API_TIMEOUT=30000
NEXT_PUBLIC_QNN_POLLING_INTERVAL=5000
NEXT_PUBLIC_QNN_MAX_RETRIES=3
NEXT_PUBLIC_QNN_ENABLE_POLLING=true

# ============================================
# Strapi CMS Configuration
# ============================================
NEXT_PUBLIC_STRAPI_URL=https://ainative-community-production.up.railway.app

# ============================================
# Authentication Configuration
# ============================================
# GitHub OAuth (client ID is public, secret is server-side)
NEXT_PUBLIC_GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# JWT Configuration (SERVER-SIDE ONLY)
JWT_SECRET=your_jwt_secret_minimum_32_characters
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your_refresh_token_secret_minimum_32_characters
REFRESH_TOKEN_EXPIRES_IN=7d

# ============================================
# Database Configuration (SERVER-SIDE ONLY)
# ============================================
DATABASE_URL=postgresql://username:password@localhost:5432/ainative
DATABASE_POOL_SIZE=10

# Redis Configuration
REDIS_URL=redis://localhost:6379

# ============================================
# External Services (SERVER-SIDE ONLY)
# ============================================
# OpenAI API
OPENAI_API_KEY=your_openai_api_key

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key

# ZeroDB Configuration
ZERODB_API_URL=https://api.ainative.studio/v1
ZERODB_API_KEY=your_zerodb_api_key

# ============================================
# Luma Events API
# ============================================
NEXT_PUBLIC_LUMA_API_URL=https://api.lu.ma
LUMA_API_KEY=your_luma_api_key

# ============================================
# Analytics & Monitoring
# ============================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Google Analytics 4 (optional - defaults to production ID if not set)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google Tag Manager (optional)
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Meta Pixel (Facebook/Instagram Conversion Tracking)
# Get your Pixel ID from: https://business.facebook.com/events_manager
# Format: 15-16 digit number (e.g., 1234567890123456)
NEXT_PUBLIC_META_PIXEL_ID=

# Chatwoot Live Chat (optional)
NEXT_PUBLIC_CHATWOOT_WEBSITE_TOKEN=XfqwZwqj9pcjyrFe4gsPRCff
NEXT_PUBLIC_CHATWOOT_BASE_URL=https://chat.ainative.studio

# Sentry Error Monitoring (optional)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# ============================================
# Feature Flags
# ============================================
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_QUANTUM_FEATURES=false
NEXT_PUBLIC_ENABLE_EXPERIMENTAL_FEATURES=false
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false

# ============================================
# Email Configuration (SERVER-SIDE ONLY)
# ============================================
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
FROM_EMAIL=noreply@ainative.studio
FROM_NAME=AINative Studio

# ============================================
# AWS S3 Storage (SERVER-SIDE ONLY)
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=ainative-uploads

# ============================================
# Rate Limiting Configuration (SERVER-SIDE ONLY)
# ============================================
# Enable/disable rate limiting globally (default: true)
RATE_LIMITING_ENABLED=true

# Whitelisted IPs that bypass rate limiting (comma-separated)
# Default: 127.0.0.1,::1,localhost
RATE_LIMIT_WHITELIST_IPS=127.0.0.1,::1,localhost

# Abuse detection threshold - number of violations before IP blocking (default: 10)
RATE_LIMIT_ABUSE_THRESHOLD=10

# Abuse detection window in milliseconds (default: 3600000 = 1 hour)
RATE_LIMIT_ABUSE_WINDOW_MS=3600000

# IP block duration in milliseconds (default: 86400000 = 24 hours)
RATE_LIMIT_BLOCK_DURATION_MS=86400000

# ============================================
# Redis for Rate Limiting (OPTIONAL - For Production)
# ============================================
# If using Upstash Redis for distributed rate limiting across multiple servers
# UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your_upstash_token
